<h1>Holidays #index</h1>
<p> <%= flash[:notice] %> </p><br/>
<div style="float:right;"><%= link_to "Create New Holiday", new_holiday_calendar_path %>
</div>

<b> All Holidays </b>
<% @holiday_calendars.each do |holiday_calendar| %>
	<div style="margin:5px;border-bottom:2px solid red;">
	<%= holiday_calendar.holiday_reason %><br/>
	<%= holiday_calendar.holiday_date%> <br/>
	<%=  holiday_calendar.created_at%>
	<br/>
	<%= link_to "Edit", edit_holiday_calendar_path(holiday_calendar) %> |<%= link_to "Show", holiday_calendar_path(holiday_calendar) %> | <%= link_to "Delete", holiday_calendar_path(holiday_calendar), :method => 'DELETE' %>	

	</div>
<% end %>
